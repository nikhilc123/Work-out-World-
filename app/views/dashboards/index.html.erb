<div class="jumbotron">
  <h1 class='text-center'><i>Work Out Lounge!</i></h1>
  <p class='text-center'><i class= 'tagline'>Share your Experience with Family and Friends!</i></p>
</div>

<div class="row">
  <h3><i>List of all Members</i></h3>
  
  <%= will_paginate @athletes, renderer: BootstrapPagination::Rails, class: "pull-left paginate", id: "paginate" %>
  <br/><br/><br/>
  <% @athletes.each do |athlete| %>
   <div class="well well-sm">
      <%= athlete.full_name %>
      <% if current_user %>
        <%= link_to "Follow", friendships_path(friend_id: athlete.id), method: :post, class:"btn btn-primary pull-right"
            unless current_user.follows_or_same(athlete) %>
      <% end %>
    </div>
  <% end %>
</div>